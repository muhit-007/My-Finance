<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RadioGroup
        android:id="@+id/groupradio_cat"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radia_id1_cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:text="@string/incomebtn"
            android:textSize="20sp"
            android:textStyle="italic" />

        <RadioButton
            android:layout_weight="1"
            android:id="@+id/radia_id2_cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/expensebtn"
            android:textSize="20sp"
            android:textStyle="italic" />
    </RadioGroup>

    <EditText
        android:id="@+id/catInput"
        android:layout_width="273dp"
        android:layout_height="45dp"
        android:paddingLeft="10dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/new_edit_shape"
        android:hint="Category Name" />


</LinearLayout>