<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:elevation="3dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--on below line we are creating a
            text view for displaying a text-->
        <TextView
            android:id="@+id/CatName"
            android:layout_width="236dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="0dp"
            android:text="HelloKittyNitty"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/amountShow"
            android:layout_width="181dp"
            android:layout_height="37dp"
            android:layout_below="@id/CatName"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="8dp"
            android:paddingRight="15dp"
            android:text="234561"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/take_act"
            android:layout_width="90dp"
            android:layout_height="43dp"
            android:layout_alignParentRight="false"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/CatName"
            android:background="@drawable/new_edit_shape"
            android:textColorHighlight="#1E88E5"
            android:textSize="14sp"
            app:backgroundTint=" #8a6392 " />

        <TextView
            android:id="@+id/initDate"
            android:layout_width="190dp"
            android:layout_height="37dp"
            android:layout_below="@id/take_act"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/amountShow" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>
